<div class="modal-dialog">
  <div class="modal-content">

<%= form_for @zone, remote: true, html: { style: "display:inline;" } do |form| %>
  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="form-group">
      <%= form.label :name, class: "control-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :weather, class: "control-label" %>
      <%= form.text_field :weather, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :temperature, class: "control-label" %>
      <%= form.number_field :temperature, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :humidity, class: "control-label" %>
      <%= form.number_field :humidity, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
</div>
</div>
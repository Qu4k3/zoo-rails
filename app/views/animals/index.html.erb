<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Breed</th>
      <th>Zone</th>
      <th>Year birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><img src="<%= animal.animal_photo.url %>", height="200"></td> 
        <td><%= animal.name %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.zone.name %></td>
        <td><%= animal.year_birth %></td>
        <td><%= link_to 'Show', animal, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path, class: "btn btn-success" %>

<div class="modal-dialog">
  <div class="modal-content">

    <%= form_for @animal, remote: true, html: { style: "display:inline;" } do |form| %>
      <% if animal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

          <ul>
          <% animal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      


      <% if animal.animal_photo.present? %>

        <%= image_tag(animal.animal_photo.url, height: 200) %>

        <div class="form-group">

          <%= form.label :remove_animal_photo, style: "display: inline" %>

          <%= form.check_box :remove_animal_photo %>

        </div>

      <% end %>
      
      <div class="form-group">
        <%= form.file_field :animal_photo %>

        <%= form.hidden_field :animal_photo_cache %>
      </div>


      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="form-group">
        <%= form.label :breed %>
        <%= form.text_field :breed %>
      </div>

      <div class="form-group">
        <%= form.collection_select :zone_id, Zone.all, :id, :name, :prompt => "Select a zone" %>
      </div>

      <div class="form-group">
        <%= form.label :year_birth %>
        <%= form.number_field :year_birth %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>

  </div>
</div>